<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/list_background">
    <LinearLayout
	    android:id="@+id/receipt_chart_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    <!-- This ListView is purely a stub, so no code has to be re-written for the 
	    ReceiptsFragment class, which extends ListFragment. This ListView will never
	    be used -->
		<ListView
			android:id="@android:id/list" 
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:padding="@dimen/card_divider_padding"
			android:divider="@android:color/transparent"
	 		android:dividerHeight="@dimen/card_divider_padding" 
	 		android:drawSelectorOnTop="false"
	 		android:visibility="gone" />
	</LinearLayout>
</ScrollView>