<!-- This spacer is here just to soak up horizontal space. -->
<!-- If this is omitted, the spinner triangle is too far from the text. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true" 
    android:paddingLeft="0dip"
	android:layout_marginLeft="0dip">

    <LinearLayout
        android:id="@+id/action_bar_spinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:singleLine="true"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginRight="4dp" />
        <TextView style="?attr/subtitleTextStyle"
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:singleLine="true"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:layout_marginRight="4dp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>